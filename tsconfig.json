{
  "compilerOptions": {
    "module": "commonjs",
    "importHelpers": true,
    "noEmitHelpers": true,
    //    "noEmit": true,
    "isolatedModules": false,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    //    "inlineSourceMap": true,
    //    "inlineSources": true,
    "declaration": true,
    //    "declarationMap": true,
    //    "declarationDir": "./types",
    "noLib": false,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "emitDeclarationOnly": true,
    "rootDir": "./src/",
    "outDir": "./build",
    //    "outFile": "./build/helper.js",
    //    "sourceMap": true,
    "strict": true,
    "target": "es2016"
  },
  "compileOnSave": true,
  "include": [
    "src"
  ]
}
